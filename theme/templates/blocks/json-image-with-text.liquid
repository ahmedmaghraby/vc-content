<div id="{{ block.__id }}" class="section {% if block.style == 'dark' %} section--gray {% endif %}
     {% if block.noTop == 'True' %} section--small-top {% endif %}
     {% if block.noBottom == 'True' %} section--small-bottom {% endif %}
     {% if block.noPad == 'True' %} section--no-padding {% endif %}">
    <div class="section__inner container">
        <div class="row align-items-lg-center {% if block.align == 'right' %} flex-row-reverse {% endif %}">
            <div class="section__img col-lg">
                <img src="{{ block.image.url }}"
                     {% if block.image.width != '' %} width="{{block.image.width}}" {% endif %}
                     {% if block.image.height != '' %} height="{{block.image.height}}" {% endif %}
                     alt="{{ item.image.altText }}" class="section__pic">
            </div>
            <div class="col-lg-auto section__info">
                {% include 'blocks/block-title' block: block%}
                <div class="section__descr">
                    {{ block.content }}
                    {% if block.url1 != '' and block.url1.urlText != '' %}
                    <a href="{{ block.url1.url }}" class="{{ block.url1.style }}">{{ block.url1.urlText }}</a>
                    {% if block.url2 != '' and block.url2.urlText != '' %}
                    <a href="{{ block.url2.url }}" class="{{ block.url2.style }}">{{ block.url2.urlText }}</a>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% comment %}

{ "id": "name", "type": "string"},
{ "id": "title", "type": "string" },
{ "id": "style", "label": "Block style", "type": "select",
    "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
    ]
},
{ "id": "align", "label": "Image position", "type": "select",
    "options": [
        { "value": "right", "label": "Right" },
        { "value": "left", "label": "Left" }
    ]
},
{ "id": "url", "type": "image" },
{ "id": "content", "type": "text" }

{% endcomment %}
